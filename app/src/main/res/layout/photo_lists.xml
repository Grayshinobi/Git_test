<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                                <ProgressBar
                                    android:id="@+id/loading"
                                    android:layout_width="112dp"
                                    android:layout_height="85dp"
                                    android:max="100"
                                    android:progress="0"
                                    android:visibility="visible"
                                    app:layout_constraintBottom_toBottomOf="@+id/dogpic"
                                    app:layout_constraintEnd_toEndOf="@+id/dogpic"
                                    app:layout_constraintStart_toStartOf="@+id/dogpic"
                                    app:layout_constraintTop_toTopOf="@+id/dogpic" />

                                <ImageView
                                    android:id="@+id/dogpic"
                                    android:layout_width="match_parent"
                                    android:layout_height="250dp"
                                    android:contentDescription="@string/dog_photos"
                                    android:fadingEdge="horizontal"
                                    android:foregroundGravity="center"
                                    android:scaleType="fitXY"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.5"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    tools:srcCompat="@tools:sample/avatars" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
