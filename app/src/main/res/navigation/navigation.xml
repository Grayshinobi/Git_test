<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/home">

            <fragment
                android:id="@+id/savedText"
                android:name="com.example.myapplication3.saved.SavedText"
                android:label="fragment_saved_text"
                tools:layout="@layout/fragment_saved_text">
                <argument
                    android:name="Title"
                    app:argType="string"
                    app:nullable="true" />
                <argument
                    android:name="discription"
                    app:argType="string"
                    app:nullable="true" />
                <action
                    android:id="@+id/action_savedText_to_home"
                    app:destination="@id/home" />
            </fragment>
    <fragment
        android:id="@+id/home"
        android:name="com.example.myapplication3.homeFrag.Home"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_home_to_savedText"
            app:destination="@id/savedText" />
    </fragment>
</navigation>


